{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    // Path mappings for Next.js
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    // Next.js plugins
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Stricter flags for better code quality
    "noUnusedLocals": true,
    "noUnusedParameters": false, // Temporarily disabled - many interface implementations have intentionally unused params
    "noPropertyAccessFromIndexSignature": true,
    // Additional strict flags
    "exactOptionalPropertyTypes": false, // Temporarily disabled - requires updating type definitions
    "noImplicitReturns": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "jest.config.js",
    "jest.setup.js",
    "playwright.config.ts"
  ]
}
